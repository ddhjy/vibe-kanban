{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Vibe Kanban",
    "version": "0.0.1",
    "identifier": "com.bloopai.vibe-kanban",
    "build": {
        "beforeDevCommand": "cd frontend && npm run dev -- --port 1420",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../frontend/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Vibe Kanban",
                "width": 1400,
                "height": 900,
                "minWidth": 800,
                "minHeight": 600,
                "center": true,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "externalBin": [
            "binaries/server"
        ],
        "macOS": {
            "minimumSystemVersion": "10.15"
        }
    }
}